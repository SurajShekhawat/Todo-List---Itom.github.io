<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ITOM - ToDo List</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div class="box">
        <h1>Todo List</h1>
    </div>
    <div class="box">
       <% for(var i=0; i<ejes.length; i++) {%>
        <div class="items">
        <input type="checkbox" name="checkbox" onclick=deleteCheck() >
            <p onclick=deleteCheck() ><%= ejes[i] %></p>
        </div>
        <% } %>

        <form action="/" method="POST">
            <input type="text" name="text" placeholder="Enter a Todo">
            <button type="submit">+</button>
        </form>
    </div>

    <script>
        function deleteCheck() {
            var x = document.getElementsByClassName("items");
            for(var i=0; i<x.length; i++) {
                if(x[i].getElementsByTagName("input")[0].checked) {
                    x[i].parentNode.removeChild(x[i]);
                }
            }
        }
    </script>
</body>
</html>